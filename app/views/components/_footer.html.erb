<footer class="bg-[#131D4F] text-white px-6 py-12">
    <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-5 gap-8">
        <!-- Indirizzo -->
        <div>
            <h3 class="text-lg font-semibold mb-2">Indirizzo</h3>
            <p class="text-gray-400 leading-relaxed">
                <% indirizzo.each do |value| %>
                    <%= value %><br />
                <% end %>
            </p>
        </div>

        <!-- Contatti -->
        <div>
            <h3 class="text-lg font-semibold mb-2">Contatti</h3>
            <ul class="text-gray-400 space-y-1">
                <% contatti.each do |value| %>
                    <li><%= value %></a></li>
                <% end %>
            </ul>
        </div>

        <!-- Service e novità -->
        <div>
            <h3 class="text-lg font-semibold mb-2">Service e novità</h3>
            <ul class="text-gray-400 space-y-1">
                <% servizi.each do |value| %>
                    <li><a href="#" class="hover:underline"><%= value %></a></li>
                <% end %>
            </ul>
        </div>

        <!-- Informazioni -->
        <div>
            <h3 class="text-lg font-semibold mb-2">Informazioni</h3>
            <ul class="text-gray-400 space-y-1">
                <% informazioni.each do |value| %>
                    <li><a href="#" class="hover:underline"><%= value %></a></li>
                <% end %>
            </ul>
        </div>

        <!-- Recensioni -->
        <div>
            <h3 class="text-lg font-semibold mb-2">Recensioni</h3>
            <% recensioni.each_with_index do |(value), index| %>
                <% if index == 0 %>
                    <div class="text-yellow-400 mb-1"><%= value %></div>
                <% else %>
                    <p class="text-gray-400 text-sm"><%= value %></p>
                <% end %>
            <% end %>
        </div>
    </div>

    <!-- Icone e link -->
    <div class="max-w-7xl mx-auto mt-10 border-t border-gray-700 pt-6 flex flex-col md:flex-row items-center justify-between gap-4 text-gray-400 text-sm">
        <div class="flex flex-wrap items-center gap-4">
            <a href="#" class="flex items-center gap-1 hover:text-white"><span>📄</span> Brochure</a>
            <a href="#" class="flex items-center gap-1 hover:text-white"><span>🎁</span> Buoni regalo</a>
            <a href="#" class="flex items-center gap-1 hover:text-white"><span>🌀</span> Tour a 360°</a>
            <a href="#" class="hover:text-white">📘</a>
            <a href="#" class="hover:text-white">📸</a>
            <a href="#" class="hover:text-white">📌</a>
        </div>

        <div class="text-center md:text-right">
            <p class="mb-1">© 2025 Oltremare Travel | PartIVA: IT0067910213</p>
            <p class="space-x-3">
                <a href="#" class="hover:underline">Note legali</a>
                <a href="#" class="hover:underline">Privacy policy</a>
                <a href="#" class="hover:underline">Mappa del sito</a>
            </p>
        </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-6 text-center text-gray-500 text-sm">
        <div class="flex flex-col md:flex-row justify-center items-center gap-4">
            <span>Partner ▾</span>
            <span>Riconoscimenti ▾</span>
            <span>Pagine interessanti ▾</span>
            <div class="mt-2 md:mt-0 flex items-center gap-1">
                <span>created by tmomo</span>
            </div>
        </div>
    </div>
</footer>
