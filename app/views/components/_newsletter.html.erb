<section class="bg-[#131D4F] py-16 px-6 text-center">
    <h2 class="text-white text-3xl md:text-4xl font-medium mb-8 leading-snug">
        <%= newslettertitle %>
    </h2>
    <form class="flex flex-col md:flex-row justify-center items-center max-w-xl mx-auto">
        <input
            type="email"
            placeholder="Inserisci indirizzo e-mail"
            class="w-full md:w-auto px-3 py-3 mb-4 md:mb-0 md:mr-2 border border-gray-700 bg-transparent text-white placeholder-gray-400 focus:outline-none"
        />
        <button
            type="submit"
            class="px-6 py-3 bg-[#b58e5c] text-white font-medium hover:bg-[#a27d4a] transition"
        >
            <%= newsletterbutton %>
        </button>
    </form>
</section>
