<div class="w-full mx-auto bg-[#EFE4D2] px-4 py-12">
    <div class="flex flex-col md:flex-row items-center rounded-[32px] backdrop-blur-md bg-[#EFE4D2]  p-6 md:p-10 gap-8">
        <!-- Immagine a sinistra -->
        <div class="order-1 md:order-none flex-1 w-full md:w-auto">
            <img src="<%= immagine %>" alt="Immagine card" class="rounded-[30px] w-full h-auto shadow-xl">
        </div>

        <!-- Testo a destra -->
        <div class="order-2 md:order-none flex-1 text-[#254D70]">
            <h2 class="text-2xl md:text-3xl font-extrabold leading-tight mb-4">
                <%= titolo_card %>
            </h2>
            <p class="text-sm md:text-base leading-relaxed text-[#254D70] mb-6">
                <%= testo_card %>
            </p>
        </div>
    </div>
</div>